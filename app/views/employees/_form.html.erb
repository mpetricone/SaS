<%= render partial: 'shared/error_form_uc', locals: { result: @employee, object_name: Employee.model_name.human, object_action: form_action } %>
<%= @employee.contact %>
<div class='row'>
  <div class='col-full-half'>
    <div class='card'>
      <% unless @employee.contact %>
        <div clas='card-header'>
        <%= content_tag :h4, t(:title_search, for: Contact.model_name.human) %>
        </div>
        <div  id="contact_search_form">
          <div class='card-body'>
            <%= form_tag(new_employee_path, method: :get, id: "search_user_form", remote: true) do %>
              <div class='form-group'>
                <%= text_field_tag :sfname , params[:sfname], placeholder: t(:label_search, for: Contact.human_attribute_name(:fname)) %>
              </div>
              <div class='form-group'>
                <%= text_field_tag :slname, params[:slname], placeholder: t(:label_search, for: Contact.human_attribute_name(:lname)) %>
              </div>
              <div class='form-group'>
                <%= button_tag "Search", name: nil, type: 'submit', class: 'btn btn-primary' %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div id="contact_list">
  <%= render partial: 'form_main', locals: { form_action: form_action} %>
</div>
