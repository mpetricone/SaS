<%= render partial: 'shared/error_form_uc', locals: { result: @product_ticket, object_name: ProductTicket, object_action: form_action } %>
<%= form_for [@ticket, @product_ticket] do |f| %>
    <div class='form-body'>
        <%= render_field_group f, t(:label_product_info),
          [ { search: true, search_id: 'product-ticket-search', search_name: Product.model_name.human },
            {label: :product_id, name: :product_id, type: :collection_select,
              ext_params: {collection: [], value_method: :id, text_method: :name }},
        {label: :quantity, name: :quantity, type: :number_field },
            {label: :price, name: :price, type: :text_field}]%>
        <%= render_field_group f, ProductTicket.human_attribute_name(:date_sold),
            [{label: nil, name: :date_sold, type: :date_select}]%>
    </div>
    <%= render_actions f, @ticket %>
<% end %>
