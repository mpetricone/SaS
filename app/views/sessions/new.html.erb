<div class="row justify-content-center">
  <div class="col-6">
    <div class="card">
      <h1 class="card-header"><%= Employee.model_name.human %> Login</h1>
      <div class="card-body">
        <%= form_for(:session, url: login_path, html: {class: 'form-horizontal' }) do |f| %>
          <div class='form-group'>
            <%= f.label :user_name, for: :user_name, class: 'col-xs-5 control-label' %>
            <div class='col-xs-7'>
              <%= f.text_field :user_name, class: 'form-control' %>
            </div>
          </div>
          <div class='form-group'>
            <%= f.label :password, for: :password, class: 'col-xs-5 control-label' %>
            <div class='col-xs-7'>
              <%= f.password_field :password, class: 'form-control' %>
            </div>
          </div>
          <div class='form-group d-flex justify-content-center p-2'>
            <%= button_tag ficon('power-off', "Login"), type: 'submit', class: 'btn btn-primary btn-block' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
