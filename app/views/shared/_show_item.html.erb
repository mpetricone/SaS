<%# display attributes for use in show %>
<%# parameters %>
<%# attribs: array of symbols representing the attributes to show %>
<%# model: ActiveRecord class containting attributes to be displayed %>
<div class='col-full-half'>
  <div class='card'>
    <div class='card-header'>
      <%= content_tag :h4, " #{model.class.model_name.human}" %>
    </div>
    <div class='card-body'>
      <% attribs.each do |attrib| %>
        <div class='show_field'>
          <%= content_tag :strong , "#{model.class.human_attribute_name attrib}:",class: 'view_label' %>
          <%= model[attrib] %>
        </div>
      <% end %>
    </div>
  </div>
</div>
