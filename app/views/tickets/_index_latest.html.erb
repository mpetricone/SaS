<div class="col">
  <div class='card'>
    <%= content_tag :h5, class: 'card-header' do %>
      <%= title %>
    <%end%>
    <div class="card-body table-responsive">
      <table class="table table-striped table-bordered table-hover table-sm">
        <thead>
          <tr>
            <th>Client</th>
            <th>Updated At</th>
            <th>Description</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% tickets.each do |t| %>
            <tr>
              <td><%=t.client.name%></td>
              <td><%=t.updated_at%></td>
              <td><%=t.short_description%></td>
              <td><%= link_to ficon('edit', "Edit"), t, class: 'btn btn-primary btn-sm' %></td>
            </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>
